<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/marca_item"
            android:layout_marginLeft="1dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="Marca"/>

            <ImageView
                android:id="@+id/imagenlogo"
                android:layout_width="35dp"
                android:layout_height="58dp"
                android:src="@drawable/descarga"/>

            <TextView
                android:id="@+id/vitola_item"
                android:layout_below="@+id/marca_item"
                android:layout_toRightOf="@+id/imagenlogo"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vitola"/>
            <TextView
                android:id="@+id/capa_item"
                android:layout_toRightOf="@+id/vitola_item"
                android:layout_below="@+id/marca_item"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capa"/>
            <TextView
                android:id="@+id/tipo_empaque_item"
                android:layout_below="@+id/marca_item"
                android:layout_toRightOf="@+id/capa_item"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/10"/>

            <TextView
                android:id="@+id/item_item"
                android:layout_marginLeft="55dp"
                android:layout_below="@+id/vitola_item"
                android:layout_toRightOf="@+id/imagenlogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000901457"/>

            <TextView
                android:id="@+id/cantidad_item"
                android:layout_below="@id/capa_item"
                android:layout_toRightOf="@+id/item_item"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="500"/>


    </RelativeLayout>


</LinearLayout>